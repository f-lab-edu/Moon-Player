{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["react/next", "react-dom/next", "node", "lodash", "jest-dom"],
    "allowJs": false,
    "noImplicitAny": false, // any 못하게
    "skipLibCheck": true, //컴파일 시간을 줄여줌
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": "src"
  },
  "include": ["src/**/*", "setupTests.ts"], // src디렉터리와 src하위 디렉토리 포함 컴파일
  "exclude": ["node_modules", "build", "**/*.(spec|test).ts"],
  "paths": {
    "@src/*": ["src/*"]
  }
}
